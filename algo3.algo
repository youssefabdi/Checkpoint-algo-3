PROCEDURE dot_Product(v1,v2: ARRAY_OF FLOAT[n], VAR vec )
VAR
    i:INTEGER
BEGIN
    FOR i FROM 0 TO n-1 STEP   DO
        vec:= vec + (v1[i]*v2[i])
    END_FOR
END

